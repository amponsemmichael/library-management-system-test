<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.amponsem.librarymanagementsystem.controllers.EditBookController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Title:"/>
    <TextField fx:id="titleField" GridPane.columnIndex="1"/>

    <Label text="Publication Date:" GridPane.rowIndex="1"/>
    <TextField fx:id="publicationDateField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Category:" GridPane.rowIndex="2"/>
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Copies Owned:" GridPane.rowIndex="3"/>
    <TextField fx:id="copiesOwnedField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button text="Save" onAction="#handleSave" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button text="Cancel" onAction="#handleCancel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
